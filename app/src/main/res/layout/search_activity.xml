<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0">

    <FrameLayout
        android:id="@+id/container"
        android:name="com.example.termproject.RankFragment"
        android:layout_width="match_parent"
        android:layout_height="586dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:background="@drawable/menufragmentbar">
        <Button
            android:id="@+id/home_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/menu_home_button"
            android:text="홈"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/search_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/menu_search_button"
            android:text="유저\n전적검색"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/champinfo_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/menu_champ_button"
            android:text="챔피언\n정보"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/rank_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/menu_rank_button"
            android:text="최상위\n유저 랭크"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/board_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/menu_board_button"
            android:text="게시판"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>